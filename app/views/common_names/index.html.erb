<p id="notice"><%= notice %></p>

<h1>Common Names</h1>

<table>
  <thead>
    <tr>
      <th>Species</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @common_names.each do |common_name| %>
      <tr>
        <td><%= common_name.species %></td>
        <td><%= common_name.name %></td>
        <td><%= link_to 'Show', common_name %></td>
        <td><%= link_to 'Edit', edit_common_name_path(common_name) %></td>
        <td><%= link_to 'Destroy', common_name, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Common Name', new_common_name_path %>
