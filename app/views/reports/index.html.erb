<p id="notice"><%= notice %></p>

<h1>Reports</h1>

<table>
  <thead>
    <tr>
      <th>Created by</th>
      <th>Type</th>
      <th>Taxon</th>
      <th>Photo</th>
      <th>Handled</th>
      <th>Handled by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.created_by %></td>
        <td><%= report.type %></td>
        <td><%= report.taxon %></td>
        <td><%= report.photo %></td>
        <td><%= report.handled %></td>
        <td><%= report.handled_by %></td>
        <td><%= link_to 'Show', report %></td>
        <td><%= link_to 'Edit', edit_report_path(report) %></td>
        <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

