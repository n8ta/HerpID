<p id="notice"><%= notice %></p>

<h1>Tier2s</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Tier1</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tier2s.each do |tier2| %>
      <tr>
        <td><%= tier2.name %></td>
        <td><%= tier2.tier1 %></td>
        <td><%= link_to 'Show', tier2 %></td>
        <td><%= link_to 'Edit', edit_tier2_path(tier2) %></td>
        <td><%= link_to 'Destroy', tier2, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tier2', new_tier2_path %>
